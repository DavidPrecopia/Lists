<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FirebaseUIAuthStyle" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <!--Color of focused TextInputEditText-->
        <item name="colorControlActivated">@color/colorAccent</item>
        <!--Ripple color-->
        <item name="colorControlHighlight">@color/colorAccent</item>
        <!--Activity's background - it is black on some devices-->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="FirebaseUI.TextInputLayout">
        <item name="hintTextAppearance">@style/FirebaseUIHintTextAppearance</item>
    </style>

    <style name="FirebaseUIHintTextAppearance">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>